---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === "/" + (subpath?.[0] || "");
---

<a
    href={href}
    class:list={[
        className,
        { active: isActive },
        isActive
            ? "lg:border-s-emerald-600! border-b-transparent! text-neutral-100!"
            : "lg:border-s-neutral-600 border-b-transparent!",
    ]}
    {...props}
    class="lg:ps-4 px-2 lg:py-2 lg:border-s lg:border-b-0 border-b hover:text-neutral-100 text-neutral-400 text-sm"
>
    <slot />
</a>
<style>
    a {
        display: inline-block;
        text-decoration: none;
    }
    a.active {
        /*text-decoration: underline;*/
    }
</style>
